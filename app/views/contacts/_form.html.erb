<%= form_for @contact, url: create_contact_url, :html => { class: "contact"} do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="mb-4">
    <%= f.text_field  :name, required: true, placeholder: t('.contact_name', :default => 'Nimi'), class: "appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-200 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>
  <div class="mb-4">
    <%= f.text_field :email, required: true, placeholder: t('.contact_email', :default => 'Email'), class: "appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-200 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>
  <div class="mb-4">
    <%= f.text_field :subject, required: true, placeholder: t('.contact_subject', :default => 'Suject'), class: "appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-200 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>
  <div class="mb-4">
    <%= f.text_area :body, as: :text, rows: 5, cols: 30, required: true, class: "appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-200 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none",
    placeholder: t('.contact_body', :default => 'Write something...') %>
  </div>
  
  <div class= "hidden">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname, :hint => 'Leave this field blank!', placeholder: true %>
  </div>

  <div>
    <%= f.button class: 'inline-block w-full py-4 px-8 leading-none text-white bg-indigo-500 hover:bg-indigo-600 rounded shadow', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>  Just a moment..." } do %>
    <%= icon('far', 'paper-plane') %> <%= t('.contact_send', :default => " Send Message") %>
    <% end %>
  </div>
<% end %>