<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md">
    <%= link_to "Back", :back, class: "font-medium text-indigo-600 hover:text-indigo-500 transition ease-in-out duration-150" %>
    <div>
      <%= image_tag("https://tailwindui.com/img/logos/workflow-mark-on-white.svg", alt: "Workflow", class: "mx-auto h-12 w-auto") %>
      <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
        <%= t('.sign_in', :default => "Sign in to your account") %>
      </h2>
      <p class="mt-2 text-center text-sm leading-5 text-gray-600">
        Or
        <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition ease-in-out duration-150">
          start your 14-day free trial
        </a>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="max-w-md mb-4 form-input">
        <div class="rounded-md shadow-sm">
          <div class="mb-4">
            <label class="block text-grey-darker text-sm font-bold mb-2" for="login">
              <%= t'.email', :default => 'Eamil or Username' %>
            </label>
            <%= f.text_field :login, autofocus: true, placeholder: t('.email', :default => 'Eamil or Username'), class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5' %>
          </div>
          <div class="-mt-px">
            <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
              <%= t'.password', :default => 'Salasana' %>
            </label>
            <%= f.password_field :password, autocomplete: "off", placeholder: '***************', id: "password", type: "password",    class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5' %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="mt-6 flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, id: "remember_me", class: "form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out" %>
              <label for="remember_me" class="ml-2 block text-sm leading-5 text-gray-900">
                <%= t'.remember_me', :default => 'Muista minut' %>
              </label>
            </div>
          </div>
        <% end -%>

        <div class="mt-6">
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400 transition ease-in-out duration-150" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </span>
            <%= t'.sign_in', :default => "Sign in" %>
          </button>
        </div>
      </form>
      <br/>
      <%= render "devise/shared/links" %>
    <% end %>
    <%= render "devise/shared/custom_auth_links" %>

    <br/>
    <%= render partial: "devise/shared/form_footer", locals: {start_year: '2018'} %>
  </div>
</div>