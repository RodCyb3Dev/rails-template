<% if cookies && cookies['cookie_eu_consented'] != 'true' %>
  <div class="cookies-eu js-cookies-eu animated slideInLeft delay-8s">
    <span class="cookies-eu-content-holder"><%= t('cookies_eu.cookies_text') %></span>
    <span class="cookies-eu-button-holder">
      <button class="cookies-eu-ok js-cookies-eu-ok hover:shadow rounded -mt-2 bg-gray-400"> <%= t('cookies_eu.ok') %> </button>
      <% if defined?(link).present? %>
        <a href="<%= link %>" class="cookies-eu-link" target="<%= defined?(target).present? ? target : '' %>"> 
          <%= t('cookies_eu.learn_more') %> 
        </a>
      <% end %>
    </span>

    <%= link_to "https://eugdprcompliant.com/other-info/", target: "_new" do %>
      <%= image_tag "https://res.cloudinary.com/dwougdhor/image/upload/c_scale,w_25/v1567019133/kodeflash-assets/images/gdpr.png", alt: "GDPR", target: "_new", class: "cookies-eu-content-holder mt-1" %>
    <% end %>
  </div>
<% end %>
