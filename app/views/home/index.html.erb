<!-- start hero -->
<section class="py-12 px-4">
  <div class="flex flex-wrap items-center text-center lg:text-left -mx-2">
    <div class="lg:w-1/2 px-2 lg:pr-10 mt-10 lg:mt-0 order-1 lg:order-none"><span class="text-sm font-semibold">Ruby on Rails v6</span>
      <h2 class="text-5xl mt-4 mb-6 leading-tight font-heading">
        <%= t'.home_title' %>
      </h2>
      <%= link_to "https://github.com/Rodcode47/kodeflash-Rails-template/blob/master/README.md/", target: "_blank", rel: "nofollow", class: "text-lg text-blue-700 hover:underline" do %>
        <%= t'.learn_more' %> »
      <% end %>
    </div>
    <div class="lg:w-1/2 px-2">
      <%= image_tag("placeholders/pictures/photocopy.svg", alt: "image", class: "") %>
    </div>
  </div>
</section>
<!-- end hero -->

<!-- start about -->
<%= render :partial => 'home/info/info_section' %>
<!-- end about -->

<!-- start blog -->
<section class="py-12 px-4">
  <h2 class="text-3xl text-center mb-8 font-heading">
    <%= t".post_section_title", :default => "Latest posts" %>
  </h2>
  <div class="flex flex-wrap -mx-4">
    <% if @posts.count == 0 %>
      <div class="flex flex-col">
        <div class="flex bg-yellow-lighter max-w-sm mb-4">
          <div class="w-16 bg-yellow">
            <div class="p-4">
              <svg class="h-8 w-8 text-white fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M503.191 381.957c-.055-.096-.111-.19-.168-.286L312.267 63.218l-.059-.098c-9.104-15.01-23.51-25.577-40.561-29.752-17.053-4.178-34.709-1.461-49.72 7.644a66 66 0 0 0-22.108 22.109l-.058.097L9.004 381.669c-.057.096-.113.191-.168.287-8.779 15.203-11.112 32.915-6.569 49.872 4.543 16.958 15.416 31.131 30.62 39.91a65.88 65.88 0 0 0 32.143 8.804l.228.001h381.513l.227.001c36.237-.399 65.395-30.205 64.997-66.444a65.86 65.86 0 0 0-8.804-32.143zm-56.552 57.224H65.389a24.397 24.397 0 0 1-11.82-3.263c-5.635-3.253-9.665-8.507-11.349-14.792a24.196 24.196 0 0 1 2.365-18.364L235.211 84.53a24.453 24.453 0 0 1 8.169-8.154c5.564-3.374 12.11-4.381 18.429-2.833 6.305 1.544 11.633 5.444 15.009 10.986L467.44 402.76a24.402 24.402 0 0 1 3.194 11.793c.149 13.401-10.608 24.428-23.995 24.628z"/><path d="M256.013 168.924c-11.422 0-20.681 9.26-20.681 20.681v90.085c0 11.423 9.26 20.681 20.681 20.681 11.423 0 20.681-9.259 20.681-20.681v-90.085c.001-11.421-9.258-20.681-20.681-20.681zM270.635 355.151c-3.843-3.851-9.173-6.057-14.624-6.057a20.831 20.831 0 0 0-14.624 6.057c-3.842 3.851-6.057 9.182-6.057 14.624 0 5.452 2.215 10.774 6.057 14.624a20.822 20.822 0 0 0 14.624 6.057c5.45 0 10.772-2.206 14.624-6.057a20.806 20.806 0 0 0 6.057-14.624 20.83 20.83 0 0 0-6.057-14.624z"/></svg>
            </div>
          </div>
          <div class="w-auto text-grey-darker items-center p-4">
            <span class="text-lg font-bold pb-4">
              Heads Up!
            </span>
            <p class="leading-tight">
              These Posts will be replaced as soon as you create you own posts!
            </p>
          </div>
        </div>
      </div>

      <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
        <div class="h-full pb-8 rounded shadow-md">
          <a href="#">
            <%= image_tag("placeholders/pictures/work.jpg", alt: "work", class: "mb-4") %>
            <div class="px-5"><small>2 Oct 2020 | By Michael Scott</small>
              <h3 class="text-xl my-3 font-heading">Being world’s best boss</h3>
              <p class="text-gray-500">The wise man once said: "Friend first, boss second, entertainer third". That man was me.</p>
              <a class="text-blue-700 hover:underline" href="#">Read more »</a>
              <%= link_to "https://github.com/Rodcode47/kodeflash-Rails-template/blob/master/README.md/", target: "_blank", rel: "nofollow", class: "text-blue-700 hover:underline" do %>
                <%= t'.learn_more' %> »
              <% end %>
            </div>
          </a>
        </div>
      </div>
      <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
        <div class="h-full pb-8 rounded shadow-md">
          <a href="#">
            <%= image_tag("placeholders/pictures/office.jpg", alt: "office", class: "mb-4") %>
            <div class="px-5"><small>2 Oct 2020 | By Dwight K. Schrute</small>
              <h3 class="text-xl my-3 font-heading">Understanding the paper</h3>
              <p class="text-gray-500">So you think you know everything about paper? False, you know nothing. Let me illuminate your first steps into my world.</p>
              <%= link_to "https://github.com/Rodcode47/kodeflash-Rails-template/blob/master/README.md/", target: "_blank", rel: "nofollow", class: "text-blue-700 hover:underline" do %>
                <%= t'.learn_more' %> »
              <% end %>
            </div>
          </a>
        </div>
      </div>
      <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
        <div class="h-full pb-8 rounded shadow-md">
          <a href="#">
            <%= image_tag("placeholders/pictures/work.jpg", alt: "work", class: "mb-4") %>
            <div class="px-5"><small>1 Oct 2020 | By Jim Halpert</small>
              <h3 class="text-xl my-3 font-heading">Dwight doesn’t understand the paper</h3>
              <p class="text-gray-500">Read it and finally find out that Dwight Schrute is merely a scammer.</p>
              <%= link_to "https://github.com/Rodcode47/kodeflash-Rails-template/blob/master/README.md/", target: "_blank", rel: "nofollow", class: "text-blue-700 hover:underline" do %>
                <%= t'.learn_more' %> »
              <% end %>
            </div>
          </a>
        </div>
      </div>
    <% else %>
      <%= render :partial => 'home/posts/post_section' %>
    <% end %>
  </div>
</section>
<!-- end blog -->

